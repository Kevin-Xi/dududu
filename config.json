{
    "port": 9922,
    "serverName": "dududu",
    "maxPeerCount": 1000,
    "templates": {
        "sListen": "Server listening on port ${port}.",
        "cConnect": "New Client ${ip}:${port} comes in.",
        "cClose": "Client ${ip}:${port} leaves.",

        "!Welcome": "${serverName} > ðŸŽ‰ Welcome ${clientName}(id: {$id})! Now you can dududu with others! Happy dududu-ing!(type ':help' for help)\n",
        "!online": "${serverName} > ${clientName} is online.\n",
        "!offline": "${serverName} > ${clientName} is offline.\n",
        "!receiverNotExist": "${serverName} > ${receiverId} is not online.\n",
        "!whisper": "${senderName} whisper to ${receiverName} > ${msg}\n",

        "/rest": "**${name} sit down at table to have a rest.**\n",
        "/nod": "**${name} nod head twice.**\n",
        "/smile": "**${name} smiles.**\n",
        "/blink": "**${name} blink eyes.**\n",
        "/afk": "**${name} is AFK.**\n",
        "/me": "**${name}${act}**\n",

        ":farewell": "${serverName} > See you again, ${clientName}!\n",

        "-common": "${name} > ${data}\n"
    },
    "actions": {
        "/rest": "you are about to rest",
        "/nod": "you nod",
        "/smile": "you smile",
        "/blink": "you blink your eyes",
        "/afk": "you are afk",
        "/me <do sth>": "you do sth",
        "/tap <id>": "[WIP] tap <id> on shoulder"
    },
    "commands": {
        ":help, :h": "[WIP]show the help",
        ":nick": "[WIP]set your nick",
        ":roster, :namelist, :nl, :meibo": "show a nickname list of online users",
        ":to, :whisper <id> <msg>": "directly send <msg> to <id>, in private.",
        ":quit, :exit, :bye": "disconnect your session, will broadcast the leaving msg."
    }
}
